<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="1" verbose="1" name="IOSDriverPageObjectsDemo Suite" skipfailedinvocationcounts="false" junit="false"
    parallel="false" data-provider-thread-count="1" annotations="JDK">
    <!-- SELENIUM CONFIGURATION -->
    <parameter name="mobileNodeType" value="ios-driver" />
    <parameter name="seleniumhost" value="localhost" />
    <parameter name="seleniumport" value="5555" />

    <test verbose="2" name="appium-ios-page-objects-test" annotations="JDK">
        <classes>
            <class name="com.paypal.selion.ios.sample.IOSDriverLabelAndNavigationTest"></class>
            <class name="com.paypal.selion.ios.sample.IOSDriverButtonTapTest"></class>
            <class name="com.paypal.selion.ios.sample.IOSDriverButtonTouchTest"></class>
            <class name="com.paypal.selion.ios.sample.IOSDriverSliderSwitchTest"></class>
            <class name="com.paypal.selion.ios.sample.IOSDriverTableAlertTest"></class>
            <class name="com.paypal.selion.ios.sample.IOSDriverPickerTest"></class>
        </classes>
    </test>

</suite>

